#parse("/vm/header.vm")
<nav class="navigation">
			<h2>当前位置:</h2>
			<ul>
				<li><a href="../index">迪格学苑</a></li>
				<li>我的信息</li>
			</ul>
		</nav>
<section class="aside_article">
			<aside  >
				#set($curPage = "mymessage")
				#parse("/vm/user_nav.vm")			
			</aside>
			<article>
				<section>
					<p class="clearfix" id="tab_header_res">
						<a href="myreceive"><span class="tab1 ">消息箱</span></a>
						<a href="mysend"><span class="tab1 tab_selected">发送箱</span></a>
					</p>
					<section id="tab_detail_res">
						<div class="result_header">
								 共计 <span class="data_list_summary">${data.count}</span> 条信息
						</div>
						<div>
							#if( $data.list.size() > 0)
							#foreach($elem in ${data.list})
							<section class="user_comment">
								 #if( $elem.status == 0 )								 
								 	<p class="say_content font_bold"><a href="#" onclick="message.read($elem.id)">${elem.title}</a></p>
								 #else
								 	<p class="say_content "><a href="#" onclick="message.read($elem.id)">${elem.title}</a></p>
								 #end
								 <p class="user_title">
								 	<span class="title_dash"> </span>TO :
								 	<a href="#" onclick="message.openDialog(${elem.receiverId} , '${elem.receiver}');">${elem.receiver}</a> , &nbsp;&nbsp;发送于：$date.format(${elem.addDate})
								 	 <span><a href="#" onclick="message.delSelf(${elem.id})">删除<a></span>
								 </p>
							</section>
							#end
							#else
								<section class="basic_article">
									<p>暂无发送</p>
								</section>
							#end
						</div>
						<div id="page" class="page"></div>
<script type="text/javascript">
paginate.init("page",{
	selectedNum: 1,
	count: ${data.count},
	searchKey : "",
	url : "/my?"
});
</script>
					</section>
						
				</section>
			</article>
		</section>
	
<script type="text/javascript" src="../js/message.js"></script>
